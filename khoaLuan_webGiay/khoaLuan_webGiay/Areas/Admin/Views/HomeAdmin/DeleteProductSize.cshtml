@model khoaLuan_webGiay.Data.ProductSize
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Xóa kích cỡ sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="alert alert-warning d-flex align-items-center shadow-sm p-4 rounded-4" role="alert">
        <i class="bi bi-exclamation-triangle-fill fs-3 me-3 text-danger"></i>
        <div>
            <h4 class="alert-heading">Bạn có chắc chắn muốn xóa kích cỡ sản phẩm này không?</h4>
            <p class="mb-0">Hành động này không thể hoàn tác. Vui lòng kiểm tra kỹ trước khi tiếp tục.</p>
        </div>
    </div>

    <div class="card mt-4 shadow-sm rounded-4">
        <div class="card-header bg-danger text-white rounded-top-4">
            <h5 class="mb-0"><i class="bi bi-x-circle"></i> Thông tin kích cỡ cần xóa</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Kích cỡ</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Size)</dd>

                <dt class="col-sm-3">Số lượng</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantity)</dd>

                <dt class="col-sm-3">Giá tại thời điểm</dt>
                <dd class="col-sm-9 text-success fw-semibold">@Html.DisplayFor(model => model.PriceAtTime)</dd>

                <dt class="col-sm-3">Mã sản phẩm</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Product.ProductId)</dd>
            </dl>
        </div>
        <div class="card-footer bg-light text-end rounded-bottom-4">
            <form asp-action="DeleteProductSize" class="d-inline">
                <input type="hidden" asp-for="ProductSizeId" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill"></i> Xóa
                </button>
            </form>
            <a asp-action="ProductSize" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
